{
  "version": 2,
  "installCommand": "npm install && cd client && npm install --legacy-peer-deps",
  "buildCommand": "tsc && cd client && npm run build",
  "outputDirectory": "client/build",
  "functions": {
    "api/index.ts": {
      "includeFiles": "server/**,node_modules/better-sqlite3/**,node_modules/bindings/**,node_modules/file-uri-to-path/**,node_modules/prebuild-install/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
