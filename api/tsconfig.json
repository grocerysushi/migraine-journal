{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "..",
    "outDir": "../dist-api"
  },
  "include": ["./**/*", "../server/**/*"],
  "exclude": ["../node_modules", "../client", "../dist"]
}
